enum BambooTaskCategory {
  GENERAL
  SETUP_COMPANY
  INVENTORY
  SHOP
  FINANCE
  BRAND
}

enum BambooTaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum BambooTaskPhase {
  PHASE_1_PREPARATION
  PHASE_2_SETUP
  PHASE_3_HOT_PRE_START
  PHASE_4_START
}

enum BambooTaskPriority {
  LOW
  MEDIUM
  HIGH
}

model BambooTask {
  id           String             @id @default(cuid())
  title        String
  description  String?
  category     BambooTaskCategory
  phase        BambooTaskPhase     @default(PHASE_1_PREPARATION)
  subCategory  String?
  owner        String
  priority     BambooTaskPriority @default(MEDIUM)
  status       BambooTaskStatus   @default(TODO)
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt

  @@index([category, status, phase])
  @@index([phase])
}

model BambooProjectCharter {
  id              String   @id @default("default")
  vision          String
  targetCustomer  String
  scopeIn         String
  scopeOut        String
  budgetGuardrail String
  launchCriteria  String
  keyRisks        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model BambooNameIdea {
  id             String   @id @default(cuid())
