generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum AppCode {
  PROJECTS
  TASKS
  CALENDAR
  BAMBOO
}

enum ProjectPriority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  nickname     String?
  role         Role      @default(USER)
  passwordHash String
  projects     Project[]
  appPermissions UserAppPermission[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model BambooNameIdea {
  id             String   @id @default(cuid())
  name           String
  normalizedName String   @unique
  category       String
  isCustom       Boolean  @default(false)
  shortlisted    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([category])
  @@index([shortlisted])
}

model BambooInventoryIdea {
  id             String   @id @default(cuid())
  name           String
  normalizedName String   @unique
  notes          String
  targetPriceBand String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model BambooShopLocation {
  id             String   @id @default(cuid())
  name           String
  normalizedName String   @unique
  notes          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model BambooShopRentalPlace {
  id        String   @id @default(cuid())
  foundAt   DateTime
  price     String
  location  String
  link      String
  notes     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([foundAt])
}

model BambooShopWebsite {
  id        String   @id @default(cuid())
  name      String
  url       String   @unique
  notes     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BambooShopConcept {
  id               String   @id @default("default")
  concept          String
  targetSize       String
  targetPriceRange String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model BambooShopBudgetItem {
  id          String   @id @default(cuid())
  category    String
  monthlyCost String
  oneTimeCost String
  notes       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  priority    ProjectPriority @default(MEDIUM)
  notes       String   @default("")
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserAppPermission {
  id        String   @id @default(cuid())
  userId    String
  app       AppCode
  canRead   Boolean  @default(false)
  canEdit   Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, app])
  @@index([app])
}
